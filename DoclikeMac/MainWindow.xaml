<Window x:Class="DocklikeMac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:DocklikeMac"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="100" Width="100" Topmost="True" ResizeMode="NoResize" Icon="/Resources/TaskIcon.ico">
    <tb:TaskbarIcon IconSource="/Resources/TaskIcon.ico" ToolTipText="DockLikeMac">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="menu1" Header="表示/隠す" Click="Menu1_Click" />
                <MenuItem x:Name="menu2" Header="閉じる/開く" Click="Menu2_Click" />
                <MenuItem x:Name="menu3" Header="終了" Click="Menu3_Click" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</Window>