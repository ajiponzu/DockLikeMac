<Window x:Class="DoclikeMac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoclikeMac"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="80"
        Width="80"
        WindowStyle="None"
        Background="#2C3FE9F0"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Visibility="Visible"
        Topmost="True"
        DpiChanged="Window_DpiChanged"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave" ShowInTaskbar="False">

    <Grid x:Name="iconList" Margin="12,5,12,0" Background="#BFFFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
    </Grid>
</Window>